@using ManagePeopleWithTheirAccounts.ViewModel.PersonViewModel
@model UpdatePersonInformationViewModel

<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
        <li class="breadcrumb-item text-sm"><i class="opacity-5 text-white fa fa-home"></i></li>
        <li class="breadcrumb-item text-sm active text-white" aria-current="page">Update Person Information</li>
    </ol>
    <h6 class="font-weight-bolder mb-0">Update Person Information</h6>
</nav>

<div class="container-fluid py-4">
  
    <div class="row">
        <div class="col-lg-9 col-12 mx-auto">
            <div class="card card-body mt-4">
                <h4 class="mb-0">Update Person Information</h4>
                <hr class="horizontal dark my-2">
                <form method="post" id="form">

                    @Html.AntiForgeryToken()
                    <input asp-for="@Model.Code" type="hidden" />

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name)
                        <input asp-for="@Model.Name" type="text" class="form-control" />
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Surname)
                        <input asp-for="@Model.Surname" type="text" class="form-control"   />
                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Id_number)
                        <input asp-for="@Model.Id_number" type="text" class="form-control"   disabled />
                        @Html.ValidationMessageFor(model => model.Id_number, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="d-flex justify-content-start mt-4">
                        <button type="submit" class="btn btn-primary mt-2 me-2">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>