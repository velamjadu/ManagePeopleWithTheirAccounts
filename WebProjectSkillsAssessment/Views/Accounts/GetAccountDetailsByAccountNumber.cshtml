@using ManagePeopleWithTheirAccounts.ViewModel.AccountViewModel
@model AccountDetailsWithTransationList
<style>
    .top-right {
        top: 3%;
        right: 3%;
    }
</style>
<br />
<div class="card card-body mt-12">
     <div class="card card-body mt-4">

        <div class="position-absolute top-right">

            <a asp-controller="/Transactions" asp-action="AddTransactions" asp-route-Code="@Model.Account.Code" class="btn btn-primary">Add Transations</a>
        </div>
        <h4 class="mb-0">Account Details</h4>
        <hr class="horizontal dark my-2">
        <div class="form-group">
            <div class="row">
                <div class="col-3"><strong>Code</strong></div>
                <div class="col-9">@Model.Account.Code</div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-3"><strong>Account Number</strong></div>
                <div class="col-9">@Model.Account.AccountNumber</div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-3"><strong>Outstanding Amount</strong></div>
                <div class="col-9"><text>R</text>@Model.Account.OutstandingAmount.ToString("0.00")</div>
            </div>
        </div>

        <div class="d-flex justify-content-start mt-4">
            <a asp-controller="/Accounts" asp-action="UpdateAccountInformation" asp-route-AccountNumber="@Model.Account.AccountNumber" class="badge badge-primary rounded-pill d-inline"
               data-mdb-ripple-color="dark" data-mdb-toggle="tooltip" data-mdb-placement="right" title="Update Account Information">Update Account Information<i class="fas fa-user-edit"></i></a>
           </div>
    </div>


    <div class="card card-body mt-4">
        <div class="row w-100">
            <table class="table align-middle mb-0 bg-white">
                <thead class="bg-light">
                    <tr>
                        <th>Captured Date</th>
                        <th>Transaction Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.getTransactionsByAccountCodeOrIds)
                    {

                    <tr>
                         <td>
                             @item.CaptureDate
                         </td>
                            <td>
                                @item.TransactionDate
                            </td>
                            <td>
                                <a asp-controller="/Transactions" asp-action="GetTransactionDetailsByAccountCodeOrId" asp-route-AccountCode="@item.Code" class="btn btn-link btn-rounded btn-sm fw-bold"
                               data-mdb-ripple-color="dark"><i class="fas fa-user-edit" data-mdb-toggle="tooltip" data-mdb-placement="right" title="View Transaction Information"></i></a>
                            </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

